<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KDS - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kds")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kitchen Display System", "Index", "Home", new { Area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { Area = "" }, new { })</li>
                    @if (KDS.Infraestructure.CrossCutting.Helpers.AppContext.Exists)
                    {
                        <li>@Html.ActionLink("Punto de Preparación", "Index", "PtoPreparacion", new { Area = "Kitchen" }, new {})</li>
                        <li>@Html.ActionLink("Tiempo de Preparación", "Index", "TiempoPreparacion", new { Area = "Kitchen" }, new { })</li>
                        <li>@Html.ActionLink("Tiempos de Consumo", "Index", "TiempoConsumo", new { Area = "Kitchen" }, new { })</li>
                        <li>@Html.ActionLink("Pedidos", "Index", "Pedido", new { Area = "Kitchen" }, new { })</li>
                        <li>@Html.ActionLink("Pedidos HTML", "Pedido", "Pedido", new { Area = "Kitchen" }, new { })</li>
                        @*<li>@Html.ActionLink("Tiempos de Preparación", "Index", "ProductoTiempo", new { Area = "Kitchen" }, new { })</li>*@                        
                    }                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kitchen Display System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kds")
    @RenderSection("scripts", required: false)
</body>
</html>
