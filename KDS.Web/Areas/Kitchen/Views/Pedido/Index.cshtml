@using KDS.Domain.Entities;

@{
    ViewBag.Title = "Pedidos por Punto de Preparación";
}

<style>
    .widget {
        position: relative;
        margin-bottom: 30px;
        padding: 15px 20px;
        background: #fff;
        border-radius: 3px;
    }

    .widget>footer, .widget>header {
        margin: -15px -20px;
        padding: 15px 20px;
    }

    .widget>.widget-body.no-padding+footer, .widget>header+.widget-body, .widget>header+.widget-body.no-padding {
        margin-top: 15px;
    }

    .table>caption+thead>tr:first-child>td, .table>caption+thead>tr:first-child>th, .table>colgroup+thead>tr:first-child>td, .table>colgroup+thead>tr:first-child>th, .table>thead:first-child>tr:first-child>td, .table>thead:first-child>tr:first-child>th {
        border-top: 0;
    }

    .table>thead>tr>th {
        font-weight: 600;
        text-transform: uppercase;
        border-bottom-width: 1px;
    }

    .table>thead>tr>th {
        vertical-align: bottom;
        border-bottom: 2px solid #ddd;
    }

    .table>thead>tr>th {
        padding: 8px;
        line-height: 1.428571429;
        border-top: 1px solid #ddd;
    }

    .fw-semi-bold {
        font-weight: 600;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td {
        padding: 8px;
        line-height: 1.428571429;
        vertical-align: top;
        border-top: 1px solid #ddd;
    }

    .text-semi-muted {
        color: #b6b6b6;
    }

    .width-150 {
        width: 150px;
    }

    .mt-xs {
        margin-top: 5px;
    }

    .progress {
        overflow: hidden;
        height: 20px;
        margin-bottom: 20px;
        background-color: #eee;
        border-radius: 4px;
        box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
    }

    .progress-sm, .progress-xs {
        height: 10px;
        margin-bottom: 10px;
    }

    .progress-bar {
        float: left;
        width: 0%;
        height: 100%;
        font-size: 12px;
        line-height: 20px;
        color: #fff;
        text-align: center;
        background-color: #5d8fc2;
        box-shadow: inset 0 -1px 0 rgba(0,0,0,.15);
        -webkit-transition: width .6s ease;
        transition: width .6s ease;
    }

    .progress, .progress-bar {
        box-shadow: none;
    }

    .progress-bar {
        border-radius: 4px;
    }

    .progress, .progress-bar {
        box-shadow: none;
    }

    .progress-bar-success {
        background-color: #64bd63;
    }

    .progress-bar-warning {
        background-color: #f0b518;
    }

    .progress-bar-gray {
        background-color: #555;
    }

    .progress-bar-danger {
        background-color: #dd5826;
    }

    .page-title {
        margin: 0 0 20px;
    }

    table.dataTable {
        margin-top: 0px !important;
    }
</style>

<div class="row">
    <div class="col-md-offset-10 col-md-2">
        <h2 class="blue pull-right" id="time"></h2>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Preparación</h3>
    </div>
    <table id="grdPedidoPreparacion" class="table table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="center" width="5%">Mesa</th>
                <th class="center" width="5%">Paso</th>
                <th class="center" width="5%">Cantidad</th>
                <th class="center" width="10%">Producto</th>
                <th class="center" width="10%">Operador</th>
                <th class="center" width="10%">Propiedad</th>
                <th class="center" width="20%">Descripción</th>
                <th class="center" width="20%">Observaciones</th>
                <th class="center" width="10%">Salida</th>
                <th class="center"></th>
            </tr>
        </thead>
    </table>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Pendientes</h3>
    </div>
    <table id="grdPedidoPendiente" class="table table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="center" width="5%">Mesa</th>
                <th class="center" width="5%">Paso</th>
                <th class="center" width="5%">Cantidad</th>
                <th class="center" width="10%">Producto</th>
                <th class="center" width="10%">Operador</th>
                <th class="center" width="10%">Propiedad</th>
                <th class="center" width="20%">Descripción</th>
                <th class="center" width="20%">Observaciones</th>
                <th class="center" width="10%">Inicio</th>
                <th class="center"></th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script type="text/javascript">
        //#region Variables Globales
        //#endregion

        //#region Funciones Globales
        //#endregion

        $(function () {
            //#region Variables
            var grdPedidoPendiente;
            var grdPedidoPreparacion;
            var indGrdPedidoPendiente = false;
            var indGrdPedidoPreparacion = false;
            //#endregion

            //#region Configuración
            //#endregion

            //#region Funciones
            function cargarGrdPedidoPendiente() {
                if (indGrdPedidoPendiente) {
                    grdPedidoPendiente.fnDraw();
                    return;
                }

                grdPedidoPendiente =
                    $("#grdPedidoPendiente").dataTable({
                        bPaginate: false,
                        info: false,
                        processing: false,
                        dom: 'frtip',
                        order: [[8, "asc"]],
                        ajax: {
                            "url": '@Url.Action("ObtenerPedidosPaginado")',
                        },
                        aoColumns: [
                            {
                                "sName": "Mesa",
                                "sClass": "center"
                            },
                            {
                                "sName": "PasoServicio",
                                "sClass": "center"
                            },
                            {
                                "sName": "Cantidad",
                                "sClass": "center"
                            },
                            {
                                "sName": "ImagenProducto",
                                "sClass": "center",
                                "bSortable": false,
                                "render": function (data, type, row) {
                                    var html = data === null ? '' : '<img class="img-rounded" src="' + data + '" alt height="50" />';
                                    return html;
                                }
                            },
                            {
                                "sName": "ImagenOperador",
                                "sClass": "center",
                                "bSortable": false,
                                "render": function (data, type, row) {
                                    var html = data === null ? '' : '<img class="img-rounded" src="' + data + '" alt height="50" />';
                                    return html;
                                }
                            },
                            {
                                "sName": "ImagenPropiedad",
                                "sClass": "center",
                                "bSortable": false,
                                "render": function (data, type, row) {
                                    var html = data === null ? '' : '<img class="img-rounded" src="' + data + '" alt height="50" />';
                                    return html;
                                }
                            },
                            {
                                "sName": "Producto"
                            },
                            {
                                "sName": "Observaciones"
                            },
                            {
                                "sName": "HoraInicio",
                                "sClass": "center"
                            },
                            {
                                "bVisible": false
                            }
                        ]
                    });

                indGrdPedidoPendiente = true;
            }

            function cargarGrdPedidoPreparacion() {
                if (indGrdPedidoPreparacion) {
                    grdPedidoPreparacion.fnDraw();
                    return;
                }

                grdPedidoPreparacion =
                    $("#grdPedidoPreparacion").dataTable({
                        bPaginate: false,
                        info: false,
                        processing: false,
                        dom: 'frtip',
                        order: [[8, "asc"]],
                        ajax: {
                            "url": '@Url.Action("ObtenerPedidosPaginado")',
                        },
                        aoColumns: [
                            {
                                "sName": "Mesa",
                                "sClass": "center"
                            },
                            {
                                "sName": "PasoServicio",
                                "sClass": "center"
                            },
                            {
                                "sName": "Cantidad",
                                "sClass": "center"
                            },
                            {
                                "sName": "ImagenProducto",
                                "sClass": "center",
                                "bSortable": false,
                                "render": function (data, type, row) {
                                    var html = data === null ? '' : '<img class="img-rounded" src="' + data + '" alt height="50" />';
                                    return html;
                                }
                            },
                            {
                                "sName": "ImagenOperador",
                                "sClass": "center",
                                "bSortable": false,
                                "render": function (data, type, row) {
                                    var html = data === null ? '' : '<img class="img-rounded" src="' + data + '" alt height="50" />';
                                    return html;
                                }
                            },
                            {
                                "sName": "ImagenPropiedad",
                                "sClass": "center",
                                "bSortable": false,
                                "render": function (data, type, row) {
                                    var html = data === null ? '' : '<img class="img-rounded" src="' + data + '" alt height="50" />';
                                    return html;
                                }
                            },
                            {
                                "sName": "Producto"
                            },
                            {
                                "sName": "Observaciones"
                            },
                            {
                                "sName": "HoraSalida",
                                "sClass": "center"
                            },
                            {
                                "bVisible": false
                            }
                        ]
                    });

                indGrdPedidoPreparacion = true;
            }

            function checkTime(i) {
                return (i < 10) ? "0" + i : i;
            }

            function startTime() {
                var today = new Date(),
                    h = checkTime(today.getHours()),
                    m = checkTime(today.getMinutes()),
                    s = checkTime(today.getSeconds());
                document.getElementById('time').innerHTML = h + ":" + m + ":" + s;
                t = setTimeout(function () {
                    startTime()
                }, 500);
            }

            function load() {
                startTime();
                cargarGrdPedidoPendiente();
                cargarGrdPedidoPreparacion();
            }
            //#endregion

            //#region Eventos
            //#endregion

            //#region Load
            load()
            //#endregion
        });
    </script>
}